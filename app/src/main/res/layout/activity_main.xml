<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="80dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textColor="#069587"
            android:textSize="30dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:text="@string/Login_txtUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edt_Usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_user"
            android:background="@drawable/caja"
            android:padding="5dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:text="@string/Login_txtClave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edt_Clave"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:padding="5dp"
            android:drawableLeft="@drawable/ic_baseline_vpn_key"
            android:background="@drawable/caja"/>

        <Button
            android:id="@+id/login_btnEntrar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/boton"
            android:onClick="logueo"
            android:text="@string/Login_btnEntrar" />
    </LinearLayout>
</ScrollView>